<Window x:Class="StaticBalancing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StaticBalancing"
        mc:Ignorable="d"
        Title="Static Balancing Tool" Height="750" Width="700">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height = "20*"/>
            <RowDefinition Height = "480*"/>
            <RowDefinition Height = "250*"/>
        </Grid.RowDefinitions>

        <Grid Name= "MenuGrid" Grid.Row="0">
            <DockPanel Name="MenuPanel"  VerticalAlignment="Stretch">
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_System"></MenuItem>
                    <MenuItem Header="_Help"></MenuItem>
                </Menu>
            </DockPanel>
        </Grid>

        <Grid Name="SystemGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450*"/>
                <ColumnDefinition Width="250*"/>
            </Grid.ColumnDefinitions>

            <Grid Name="SystemInfoGrid" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height = "30*"/>
                    <RowDefinition Height = "450*"/>
                </Grid.RowDefinitions>
                <Grid Name="SystemInfoControlGrid" Grid.Row="0">
                    <Label x:Name="ConfigFilePathLabel" Content="Configuration File" Height ="26" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,2,0,0"/>
                    <TextBox x:Name="ConfigFilePathTextbox" HorizontalAlignment="Left" Height="26" Margin="109,2,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="250" Padding="3" IsReadOnly="True" MouseLeftButtonUp="ConfigFilePathTextbox_MouseLeftButtonUp"/>
                    <Button x:Name="SystemSelectButton" Content="System" Height="26" HorizontalAlignment="Left" Margin="368,2,0,0" VerticalAlignment="Top" Width="70" Click="SystemSelectButton_Click"/>


                </Grid>
                <Grid Name ="SystemInfoDisplayGrid" Grid.Row="1">
                    <Grid.Background>
                        <ImageBrush ImageSource="pack://application:,,,/StaticBalancing;component/Resource/Images/CTRotorWithAngle.png" Stretch="UniformToFill"/>
                    </Grid.Background>
                </Grid>

            </Grid>

            <Grid Name="CalibrationGrid" Grid.Column="1">

            </Grid>
        </Grid>

        <Grid Name="BalanceGrid" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>

            <Grid Name="BalanceLogGrid" Grid.Row="0">

            </Grid>
            <Grid Name="BalanceResultGrid" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450*"/>
                    <ColumnDefinition Width="200*"/>
                </Grid.ColumnDefinitions>

                <Grid Name="BalanceSinusoidGrid" Grid.Column="0">

                </Grid>
                <Grid Name="BalanceStatsGrid" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="160*"/>
                    </Grid.ColumnDefinitions>

                </Grid>
            </Grid>

        </Grid>


    </Grid>
</Window>
